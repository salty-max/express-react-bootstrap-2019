{
  "name": "express-react-bootstrap-2019",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": "10.16.3"
  },
  "scripts": {
    "server": "nodemon index.js",
    "start": "node index.js",
    "dev": "concurrently \"yarn server\" \"yarn client:start\"",
    "client:start": "cd client && yarn start",
    "client:install": "cd client && yarn",
    "lint": "npx eslint --fix *.js",
    "client:lint": "cd client &&  yarn lint",
    "lint:all": "yarn lint && yarn client:lint",
    "test": "jest --forceExit",
    "client:test": "cd client && yarn test",
    "test:all": "yarn test && yarn client:test",
    "client:precommit": "cd client && yarn precommit",
    "clean": "rm -rf node_modules && cd client && rm -rf node_modules",
    "precommit": "lint-staged && yarn test",
    "precommit:all": "yarn precommit && yarn client:precommit",
    "heroku-postbuild": "cd client && yarn && yarn build"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/client/"
    ]
  },
  "lint-staged": {
    "**/*.js": [
      "yarn lint",
      "git add"
    ]
  },
  "dependencies": {
    "concurrently": "^5.0.0",
    "cors": "^2.8.5",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "eslint": "^6.5.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "nodemon": "^1.19.3",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit:all"
    }
  }
}
